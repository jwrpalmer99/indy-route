<style>
    .indy-route-travel-modes .window-content {
        overflow: auto;
        padding: 12px 16px;
    }
    .indy-route-travel-modes form {
        display: grid;
        gap: 12px;
    }
    .indy-route-travel-modes .modes-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 8px;
    }
    .indy-route-travel-modes .modes-list {
        display: grid;
        gap: 10px;
    }
    .indy-route-travel-modes .mode-card {
        border: 1px solid var(--color-border-light-2);
        border-radius: 8px;
        padding: 8px;
        display: grid;
        gap: 6px;
        background: var(--color-bg);
    }
    .indy-route-travel-modes .mode-row {
        display: grid;
        grid-template-columns: 1.2fr repeat(2, minmax(0, 0.8fr)) 64px;
        gap: 8px;
        align-items: center;
    }
    .indy-route-travel-modes .mode-row label {
        font-size: 0.8em;
        color: var(--color-text-light-6);
    }
    .indy-route-travel-modes .mode-row input {
        width: 100%;
    }
    .indy-route-travel-modes .mode-costs {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 6px;
    }
    .indy-route-travel-modes .mode-costs input {
        width: 100%;
    }
    .indy-route-travel-modes .mode-actions {
        display: flex;
        justify-content: flex-end;
        gap: 6px;
    }
</style>

<form onsubmit="return false;">
    <div class="modes-toolbar">
        <strong>Travel Modes</strong>
        <button type="button" data-action="add-mode">Add Mode</button>
    </div>

    <div class="modes-list">
        {{#each modes as |mode idx|}}
        <div class="mode-card" data-index="{{idx}}">
            <div class="mode-row">
                <div>
                    <label>Name</label>
                    <input type="text" name="modes.{{idx}}.label" value="{{mode.label}}" />
                </div>
                <div>
                    <label>Speed (mph)</label>
                    <input type="number" min="0" step="0.1" name="modes.{{idx}}.speedMph" value="{{mode.speedMph}}" />
                </div>
                <div>
                    <label>Miles / Day</label>
                    <input type="number" min="0" step="0.1" name="modes.{{idx}}.perDayMiles" value="{{mode.perDayMiles}}" />
                </div>
                <div class="mode-actions">
                    <button type="button" data-action="delete-mode" data-index="{{idx}}">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>

            <div>
                <label>Cost / Hour ({{../currencyLabel}})</label>
                <div class="mode-costs">
                    <input type="number" min="0" step="0.01" name="modes.{{idx}}.costPerHour.first" value="{{mode.costPerHour.first}}" placeholder="First" />
                    <input type="number" min="0" step="0.01" name="modes.{{idx}}.costPerHour.standard" value="{{mode.costPerHour.standard}}" placeholder="Standard" />
                    <input type="number" min="0" step="0.01" name="modes.{{idx}}.costPerHour.steerage" value="{{mode.costPerHour.steerage}}" placeholder="Steerage" />
                </div>
            </div>

            <div>
                <label>Cost / Day ({{../currencyLabel}})</label>
                <div class="mode-costs">
                    <input type="number" min="0" step="0.01" name="modes.{{idx}}.costPerDay.first" value="{{mode.costPerDay.first}}" placeholder="First" />
                    <input type="number" min="0" step="0.01" name="modes.{{idx}}.costPerDay.standard" value="{{mode.costPerDay.standard}}" placeholder="Standard" />
                    <input type="number" min="0" step="0.01" name="modes.{{idx}}.costPerDay.steerage" value="{{mode.costPerDay.steerage}}" placeholder="Steerage" />
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <footer class="sheet-footer flexrow">
        <button type="button" data-action="save">
            <i class="fas fa-save"></i> Save
        </button>
        <button type="button" data-action="cancel">Cancel</button>
    </footer>
</form>
